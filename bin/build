#!/bin/sh
set -o errexit -e

rm -rf site
mkdir site

git config --global user.email "nobody@nobody.org"
git config --global user.name "Travis CI"

make html

cp -r reveal.js/ site/
cp -r images/ site/
cd site
git init
git add .
git commit -m 'Deploy to gh-pages'
git push --force --quiet "https://${GITHUB_TOKEN}@github.com/${GITHUB_REPO}.git" master:gh-pages
